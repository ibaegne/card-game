{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center pt-2">
            <h1 class="title"> Super jeu de cartes</h1>
        </div>
        <div class="row m-auto">
            <div class="col-md-3 col-lg-3">
                <div class="card card-custom bg-white border-white border-0">
                    <div class="card-body">
                        <img src="{{ asset('assets/img/cards.jpg') }}" alt="pile card" class="img-fluid">
                        {% if app.request.attributes.get('_route') == 'card_run'%}
                            <a href="{{ path('card') }}" class="btn btn-dark btn-lg btn-block">
                                RÃ©initialiser
                            </a>
                        {% else %}
                            <a href="{{ path('card_run') }}" class="btn btn-warning btn-lg btn-block">
                                Tirer 10 cartes
                            </a>
                        {% endif %}

                    </div>
                </div>
            </div>
            <div class="col-md-9 col-lg-9" id="result">
                {% include 'card/result.html.twig'  with {'cards': cards|default(null)}%}
            </div>
            <div class="col-md-9 col-lg-9" id="sorted">
                {% include 'card/sorted_result.html.twig'  with {'cards': cards|default(null)}%}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/custom.js') }}"> </script>
{% endblock %}
