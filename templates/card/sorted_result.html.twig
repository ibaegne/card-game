{% import 'macros/_macros.html.twig' as macros %}

<div class="row mt-4">
    {% if cards|length > 0 %}
        {% set data = cards | classify %}
        {% for card in data %}
            <div class="col-md-3 col-lg-3">
                <div class="card card-custom bg-white border-white border-0">
                    <div class="card-body">
                        {{ macros.display_sort(card) }}
                    </div>
                </div>
            </div>
        {% endfor %}
        <button type="button" class="btn btn-warning btn-lg btn-block result">
            Annuler le tri
        </button>
    {% endif %}
</div>
